<h1>Taskello</h1>
<% @tasks.each do |task| %>
<p><%= link_to task.title, task_path(task) %></p>

<%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<hr>
<% end %>
<p><%= link_to '+ Add a new task', new_task_path %></p>
